# Exemplo de variáveis de ambiente para desenvolvimento
# NÃO COMMITAR SEGREDOS reais

# API GLPI
GLPI_URL=http://seu-glpi.com/apirest.php
GLPI_APP_TOKEN=seu_app_token_aqui
GLPI_USER_TOKEN=seu_user_token_aqui

# Chave secreta para produção (substitua antes do deploy)
SECRET_KEY=sua_chave_secreta_super_forte_aqui

# Modo de dados (true=mock, false=real)
USE_MOCK_DATA=true

# Cache Redis
REDIS_URL=redis://localhost:6379/0

# Flask settings
FLASK_ENV=development
FLASK_DEBUG=true

# Host/Port
HOST=127.0.0.1
PORT=8000
